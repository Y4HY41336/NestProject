@using NewProject.ViewModel;

@{
    ViewData["Title"] = "Register";
}

@model LoginViewModel

<main class="main pages">
    <div class="page-header breadcrumb-wrap">
        <div class="container">
            <div class="breadcrumb">
                <a href="index.html" rel="nofollow">Home<i class="fi-rs-home mr-5"></i></a>
                <span></span> Pages <span></span> My Account
            </div>
        </div>
    </div>
    <div class="page-content pt-150 pb-150">
        <div class="container">
            <div class="row">
                <div class="col-xl-8 col-lg-10 col-md-12 m-auto">
                    <div class="row">
                        <div class="col-lg-6 col-md-8">
                            <div class="login_wrap widget-taber-content background-white">
                                <div class="padding_eight_all bg-white">
                                    <div class="heading_s1">
                                        <h1 class="mb-5">Login</h1>
                                        <p class="mb-30">Dont have an account? <a href="page-login.html">Register</a></p>
                                    </div>
                                    <form method="post">
                                        <div class="col-lg-12">
                                            <label>Username or Email address</label>
                                            <input asp-for="UsernameOrEmail" as placeholder="Username or Email address" />
                                            <span asp-validation-for="UsernameOrEmail" class="text-danger"></span>
                                        </div>
                                        <div class="col-lg-12">
                                            <label>Password</label>
                                            <input asp-for="Password" placeholder="Password" />
                                            <span asp-validation-for="Password" class="text-danger"></span>

                                        </div>
                                        <div class="login_footer form-group mb-50">
                                            <div class="chek-form">
                                                <div class="custome-checkbox">
                                                    <input class="form-check-input" asp-for="RememberMe" name="checkbox" id="exampleCheckbox12" value="" />
                                                    <label class="form-check-label" for="exampleCheckbox12"><span>Remember me</span></label>
                                                </div>
                                            </div>
                                            <div class="col-md-4 pt-1 mt-md-0">
                                                <div class="forgotton-password_info">
                                                    <a href="#"> Forgotten pasward?</a>
                                                </div>
                                            </div>
                                        </div>
                                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                        <div class="form-group mb-30">
                                            <button type="submit" class="btn btn-fill-out btn-block hover-up font-weight-bold" name="login">Login</button>
                                        </div>
                                        <p class="font-xs text-muted"><strong>Note:</strong>Your personal data will be used to support your experience throughout this website, to manage access to your account, and for other purposes described in our privacy policy</p>
                                    </form>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-6 pr-30 d-none d-lg-block">
                            <div class="card-login mt-115">
                                <a href="#" class="social-login facebook-login">
                                    <img src="assets/imgs/theme/icons/logo-facebook.svg" alt="" />
                                    <span>Continue with Facebook</span>
                                </a>
                                <a href="#" class="social-login google-login">
                                    <img src="assets/imgs/theme/icons/logo-google.svg" alt="" />
                                    <span>Continue with Google</span>
                                </a>
                                <a href="#" class="social-login apple-login">
                                    <img src="assets/imgs/theme/icons/logo-apple.svg" alt="" />
                                    <span>Continue with Apple</span>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>

